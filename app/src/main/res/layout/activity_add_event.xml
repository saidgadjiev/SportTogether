<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="ru.mail.sporttogether.data.binding.event.EventData" />

        <variable
            name="listener"
            type="ru.mail.sporttogether.data.binding.event.EventListener" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_add_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/md_white_1000"
            android:padding="@dimen/material_padding"
            tools:context=".activities.AddEventActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{data.mainDataVisibility? View.VISIBLE : View.GONE}">

                <EditText
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_event_hint"
                    android:maxEms="15"
                    android:maxLines="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="@string/max_people_event_hint" />

                    <EditText
                        android:id="@+id/event_max_people"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:hint="@string/max_people_event_hint"
                        android:inputType="number"
                        android:text="10"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button style="@style/FlatButton"
                        android:text="@string/add_event_set_date_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/pick_date_button"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/pick_date_text"
                        android:layout_toEndOf="@id/pick_date_button"
                        android:gravity="right"
                        android:paddingStart="@dimen/offset_medium"
                        android:layout_marginTop="15dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/lat_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.lat}" />

                <TextView
                    android:id="@+id/lng_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.lng}" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/category_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionHint="Если такого типа спорта нет, он будет создан" />

                    <ProgressBar
                        android:id="@+id/category_autocomplete_progress_bar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/category_autocomplete"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Сделать"
                    android:lines="2"
                    android:maxLines="3" />
            </LinearLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:lines="3" />

            <Button style="@style/FlatButton"
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->listener.onAddButtonClicked()}"
                android:text="@string/add" />

        </LinearLayout>
    </ScrollView>

</layout>
