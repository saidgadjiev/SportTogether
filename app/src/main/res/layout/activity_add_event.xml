<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="ru.mail.sporttogether.data.binding.event.EventData" />

        <variable
            name="listener"
            type="ru.mail.sporttogether.data.binding.event.ButtonListener" />

        <variable
            name="tasksListener"
            type="ru.mail.sporttogether.data.binding.tasks.AddTasksListener" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000">

        <LinearLayout
            android:id="@+id/activity_add_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/material_padding"
            tools:context=".activities.AddEventActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{data.mainDataVisibility? View.VISIBLE : View.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7">

                        <AutoCompleteTextView
                            android:id="@+id/category_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:completionHint="\t\tЕсли такого вида спорта нет, он будет создан"
                            android:hint="@string/category">

                            <requestFocus />
                        </AutoCompleteTextView>

                        <ProgressBar
                            android:id="@+id/category_autocomplete_progress_bar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/category_autocomplete"
                            android:layout_marginTop="5dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/event_max_people"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/offset_small"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/ic_people"
                        android:inputType="number"
                        android:text="10"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <EditText
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_event_hint"
                    android:maxEms="15"
                    android:maxLines="1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/pick_date_button"
                        style="@style/FlatButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/add_event_set_date_btn" />

                    <TextView
                        android:id="@+id/pick_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@id/pick_date_button"
                        android:gravity="end"
                        android:paddingStart="@dimen/offset_medium" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/lat_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.lat}" />

                <TextView
                    android:id="@+id/lng_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.lng}" />

                <Button
                    android:id="@+id/open_tasks_button"
                    style="@style/FlatButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:onClick="@{()->tasksListener.onOpenTasksClicked()}"
                    android:text="@string/list_tasks" />
            </LinearLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@{data.mainDataVisibility? @string/description : @string/result_header}"
                android:lines="3" />

            <Button
                android:id="@+id/add_button"
                style="@style/FlatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->listener.onButtonClicked()}"
                android:text="@{data.mainDataVisibility? @string/add_event : @string/add_result}" />
        </LinearLayout>
    </ScrollView>

</layout>
