<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="ru.mail.sporttogether.data.binding.tasks.AddTasksData" />

        <variable
            name="listener"
            type="ru.mail.sporttogether.data.binding.tasks.TaskItemListener" />

    </data>
    <RelativeLayout
        android:paddingTop="@dimen/offset_small"
        android:paddingBottom="@dimen/offset_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/item_add_task_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_add"/>

        <TextView
            android:id="@+id/item_add_task_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.message}"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/item_add_task_close_btn" />
    </RelativeLayout>
</layout>
