<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="ru.mail.sporttogether.data.binding.tasks.TaskData" />

        <variable
            name="listener"
            type="ru.mail.sporttogether.data.binding.tasks.TaskItemListener" />

    </data>
    <RelativeLayout
        android:paddingTop="@dimen/offset_small"
        android:paddingBottom="@dimen/offset_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:buttonTint="@{data.iMayChecked ? @color/colorAccent : @color/gray}"
            android:checked="@{data.isChecked}"
            android:clickable="@{data.iMayChecked}"
            android:id="@+id/task_checkbox"/>

        <TextView
            android:id="@+id/task_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.message}"
            android:layout_toEndOf="@+id/task_checkbox" />


        <TextView
            style="@style/SecondaryText"
            android:id="@+id/task_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.username}"
            android:layout_alignStart="@id/task_message"
            android:layout_alignBottom="@+id/task_checkbox" />

        <TextView
            android:id="@+id/task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.id}"
            android:visibility="invisible"
            android:layout_toEndOf="@+id/task_message" />
    </RelativeLayout>
</layout>
