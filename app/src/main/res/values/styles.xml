<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/app_primary_text</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textSize">@dimen/font_medium</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="material_drawer_selected">@color/white</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
        <item name="material_drawer_background">@color/white</item>
        <item name="material_drawer_header_selection_text">@color/white</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TitleSecondaryText">
        <item name="android:textColor">@color/app_secondary_text</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/app_secondary_text</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="AccentText">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>


    <style name="BaseText">
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="IconButtonContainer">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/offset_small</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/raised_button_background</item>

    </style>

    <style name="IconButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
        <item name="android:drawablePadding">@dimen/offset_medium</item>
        <item name="android:background">@drawable/raised_button_background</item>

    </style>


</resources>