<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/app_primary_text</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textSize">@dimen/font_medium</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="material_drawer_selected">@color/white</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
        <item name="material_drawer_background">@color/white</item>
        <item name="material_drawer_header_selection_text">@color/white</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TitleSecondaryText">
        <item name="android:textColor">@color/app_secondary_text</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/app_secondary_text</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="AccentText">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>


    <style name="BaseText">
        <item name="android:textColor">@color/app_primary_text</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="IconButtonContainer">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/offset_small</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:radius">2dp</item>

    </style>

    <style name="ClickableDetailItem" parent="ClickableView">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ClickableView" parent="NestedViewStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NestedViewStyle">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">72dp</item>
        <item name="android:paddingStart">72dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="colorControlHighlight">?colorPrimary</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>